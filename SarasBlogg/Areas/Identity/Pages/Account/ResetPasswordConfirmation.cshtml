@page
@model ResetPasswordConfirmationModel
@{
    ViewData["Title"] = "Lösenord uppdaterat";
}

<div class="card card-extra-padding container-site shadow-sm p-4 mt-4">
    <div class="card-body text-center">
        <h2 class="mb-3">@ViewData["Title"]</h2>
        <p>Ditt lösenord har uppdaterats. Du kan nu logga in med ditt nya lösenord.</p>
        <div class="d-flex justify-content-center gap-3 mt-4">
            <a asp-page="./Login" class="btn blog-btn">Gå till inloggning</a>
            <a asp-page="/Index" class="btn btn-outline-secondary">Till startsidan</a>
        </div>
    </div>
</div>
