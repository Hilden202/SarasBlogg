@page
@model SarasBlogg.Areas.Identity.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Registrera";
}
@using SarasBlogg.Areas.Identity.Pages.Account.Manage
@{
    var isManageContext = ViewContext.HttpContext.Request.Query.ContainsKey("manage");
    if (isManageContext)
    {
        Layout = "/Areas/Identity/Pages/Account/Manage/_Layout.cshtml";
        ViewData["ActivePage"] = ManageNavPages.Register;
    }
}

<h1>@ViewData["Title"]</h1>

@if (TempData["RegisterInfo"] is string info)
{
    <div class="alert alert-info">@info</div>
}

@if (!string.IsNullOrEmpty(Model.DevConfirmLink))
{
    <div class="alert alert-warning">
        <strong>Dev-läge:</strong> Bekräfta direkt via länken:<br />
        <a href="@Model.DevConfirmLink" target="_blank">Klicka här för att bekräfta</a>
    </div>
}

<div class="row">
    <div class="col-md-6">
        <form id="registerForm" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.UserName" class="form-control" placeholder="användarnamn" />
                <label asp-for="Input.UserName"></label>
                <span asp-validation-for="Input.UserName" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="namn@exempel.com" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" placeholder="lösenord" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" placeholder="bekräfta lösenord" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <!-- Frivilligt: sparas senare via profil -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Name" class="form-control" placeholder="Ditt namn (valfritt)" />
                <label asp-for="Input.Name"></label>
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.BirthYear" class="form-control" placeholder="Födelseår (valfritt)" />
                <label asp-for="Input.BirthYear"></label>
                <span asp-validation-for="Input.BirthYear" class="text-danger"></span>
            </div>

            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Registrera</button>
        </form>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
 }
