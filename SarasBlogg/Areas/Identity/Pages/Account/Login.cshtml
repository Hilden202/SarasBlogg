@page
@model LoginModel

@{
    ViewData["Title"] = "Logga in";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <h2>Använd ditt konto för att logga in.</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.UserNameOrEmail"
                           class="form-control"
                           autocomplete="username"
                           aria-required="true"
                           placeholder="name@example.com eller användarnamn" />
                    <label asp-for="Input.UserNameOrEmail" class="form-label">E-post eller användarnamn</label>
                    <span asp-validation-for="Input.UserNameOrEmail" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Password"
                           class="form-control"
                           autocomplete="current-password"
                           aria-required="true"
                           placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">Lösenord</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="checkbox mb-3">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <div>
                    <button id="login-submit"
                            type="submit"
                            class="w-100 btn btn-lg btn-primary">
                        Logga in
                    </button>
                </div>

                @* Lägg ev. tillbaka länkar när vi har API-stöd för dem *@
                <p><a id="forgot-password" asp-page="./ForgotPassword">Glömt lösenord?</a></p>
                <p><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registrera nytt konto</a></p>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const btn = document.getElementById("login-submit");
            const form = document.getElementById("account");

            if (btn && form) {
                btn.addEventListener("click", function () {
                    // disable direkt
                    btn.disabled = true;
                    btn.innerText = "Loggar in...";

                    // se till att formuläret postas
                    form.submit();
                });
            }
        });
    </script>
}

