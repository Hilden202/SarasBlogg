@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personliga data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h3>@ViewData["Title"]</h3>

<div class="row">
    <div class="col-md-8">
        <p>Ditt konto innehåller personuppgifter som du lämnat. Här kan du ladda ner eller radera dem.</p>
        <p><strong>Radering tar bort ditt konto permanent och kan inte ångras.</strong></p>

        @if (Model.Personal is not null)
        {
            <h5 class="mt-4">Profil</h5>
            <table class="table table-sm">
                @foreach (var kv in Model.Personal.Data)
                {
                    <tr><th>@kv.Key</th><td>@kv.Value</td></tr>
                }
            </table>

            <div class="d-flex gap-3 my-3">
                <div><strong>Antal kommentarer:</strong> @Model.Personal.CommentsCount</div>
                <div><strong>Antal gillningar:</strong> @Model.Personal.LikesCount</div>
            </div>

            @if (Model.Personal.Comments is not null && Model.Personal.Comments.Any())
            {
                <h5 class="mt-4">Dina kommentarer</h5>
                <table class="table table-striped table-sm">
                    <thead>
                        <tr>
                            <th>Blogg</th>
                            <th>Kommentar</th>
                            <th>Skapad</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var c in Model.Personal.Comments)
                        {
                            <tr>
                                <td>@c.BloggTitle (#@c.BloggId)</td>
                                <td>@c.Content</td>
                                <td>@c.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }

            @if (Model.Personal.Likes is not null && Model.Personal.Likes.Any())
            {
                <h5 class="mt-4">Dina gillningar</h5>
                <table class="table table-striped table-sm">
                    <thead>
                        <tr>
                            <th>Blogg</th>
                            <th>Gillad</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var l in Model.Personal.Likes)
                        {
                            <tr>
                                <td>@l.BloggTitle (#@l.BloggId)</td>
                                <td>@l.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        }

        <form id="download-data" asp-page="DownloadPersonalData" method="post" class="mt-3">
            <button class="btn btn-primary" type="submit">Ladda ner JSON</button>
        </form>
        <p class="mt-2">
            <a id="delete" asp-page="DeletePersonalData" class="btn btn-danger">Radera konto</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
