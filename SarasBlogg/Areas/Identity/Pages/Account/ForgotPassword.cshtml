@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Glömt lösenord?";
}

<div class="container-site">
    <div class="card auth-card mx-auto shadow-lg">
        <div class="card-body">

            <h1 class="blogg-title mb-2">@ViewData["Title"]</h1>
            <p class="blogg-content mb-3">
                Ange din e-postadress så skickar vi en länk för att återställa ditt lösenord.
            </p>

            <form id="forgot-form" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Email"
                           class="form-control"
                           autocomplete="username"
                           aria-required="true"
                           placeholder="namn@exempel.se" />
                    <label asp-for="Input.Email" class="form-label">E-postadress</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <button id="forgot-submit" type="submit" class="btn blog-btn w-100">
                    Skicka återställningslänk
                </button>

                <div class="auth-links mt-3">
                    <a class="auth-link" asp-page="./Login">Tillbaka till inloggning</a>
                    <a class="auth-link" asp-page="./Register">Registrera nytt konto</a>
                </div>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const form = document.getElementById("forgot-form");
            const btn  = document.getElementById("forgot-submit");
            if (!form || !btn) return;

            form.addEventListener("submit", (e) => {
                e.preventDefault();
                startLoading();
                requestAnimationFrame(() => {
                    requestAnimationFrame(() => {
                        form.submit();
                    });
                });
            });

            function startLoading() {
                if (btn.disabled) return;
                btn.disabled = true;
                btn.innerText = "Skickar…";
            }
        });
    </script>
}
